<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">

    <TextView
        android:onClick="go_activity_show_all_f"
        android:id="@+id/tv_show_f"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="106dp" />

    <TextView
        android:id="@+id/tv_show_m"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv_show_f"
        android:layout_marginStart="42dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/tv_show_f" />

    <TextView
        android:onClick="go_activity_create_post_f"
        android:id="@+id/tv_create_f"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/tv_show_m"
        android:layout_below="@+id/tv_show_m"
        android:layout_marginTop="67dp" />

    <TextView
        android:onClick="go_activity_create_post_m"
        android:id="@+id/tv_create_m"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/tv_show_f"
        android:layout_below="@+id/tv_create_f"
        android:layout_marginTop="21dp" />

</RelativeLayout>