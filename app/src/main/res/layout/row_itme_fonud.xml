<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#f7dbe1ea"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_code_post_f_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/log3"
                app:civ_border_color="#5c66c7"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tv_email_user_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/img_user"
                android:text="Email user"
                android:textColor="#000" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/ic_map"
                android:src="@drawable/placeholder"
                android:layout_toLeftOf="@id/tv_email_user_list"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/tv_datetime_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email_user_list"
                android:layout_toLeftOf="@id/img_user"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="20/02/2018"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_city_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ic_map"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:text="القاهرة"
                android:textColor="#243ae6" />

            <ImageView
                android:id="@+id/img_post_found_list"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@id/img_user"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/tv_t_phone_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/img_post_found_list"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="للاستفثار "
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_phone_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_post_found_list"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_t_phone_list"
                android:text="01117514525"
                android:textColor="#000" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>