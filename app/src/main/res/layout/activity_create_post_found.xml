<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atfalna.atfalna.Create_Post_Found_Activity"
    android:padding="3dp"
    android:background="@color/colorBlack">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="1dp"
        >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@color/color8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_create_post"
                android:text="نشر"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/post1"
                android:layout_toRightOf="@id/tv_create_post"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_marginRight="1dp"
                android:background="@color/color7"
                android:gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/img_back"
                android:text="الاعلان عن حالة تم رؤيتها"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color8"/>

            <ImageView
                android:id="@+id/img_back"
                android:onClick="back_finish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="160dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/opencamera_1"
                    android:background="@drawable/opencamera_1"
                    android:elevation="4dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#091794"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_select"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/select_image2"
                        android:background="#de96c7e1" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="أكتب التاريخ اللى شوفت فيه الحالة"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@color/color8">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:hint="السنة"
                            android:textColorHint="@color/color3"
                            android:textColor="@color/color3"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="right"
                            android:inputType="date" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="0"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="5dp"
                            android:entries="@array/spinner_dey"
                            android:gravity="center"
                            />

                        <EditText
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="2"
                            android:hint="يوم"
                            android:textColorHint="@color/color3"
                            android:textColor="@color/color3"
                            android:layout_marginRight="10dp"
                            android:paddingRight="10dp"
                            android:gravity="right"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:gravity="right|center_vertical"
                        android:background="@color/color8"
                        android:paddingRight="5dp">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:entries="@array/spinner_city"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="مدينة المفقود  :"
                            android:textColor="@color/color3"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="right"
                        android:gravity="right|center_vertical"
                        android:background="@color/color8">


                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:layout_marginTop="2dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rdo_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:checked="true"
                                android:text="ذكر"
                                android:textColor="@color/color3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/rdo_female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="أنثي"
                                android:textColor="@color/color3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RadioGroup>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="نوع المفقود  : "
                            android:textColor="@color/color3"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/color8"
                        android:layout_marginTop="2dp"
                        android:paddingRight="5dp"
                        android:gravity="right|center_vertical">

                        <EditText
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:hint="رقم التليفون"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/color3"
                            android:inputType="phone"
                            android:background="@drawable/style_ed_create_post"
                            android:paddingRight="5dp"
                            android:gravity="right|center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:background="@color/color8"
                        android:gravity="center"
                        android:layout_gravity="center_vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:hint="مكان الحالة"
                            android:textStyle="bold"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/color3"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/style_ed_create_post"
                            android:gravity="right|center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/color8"
                        android:padding="5dp"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:hint="معلومات عن الحالة"
                            android:paddingRight="5dp"
                            android:textColorHint="@color/color3"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:background="@drawable/style_ed_create_post"
                            android:gravity="right|center_vertical"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />



                </LinearLayout>

            </RelativeLayout>
        </ScrollView>



    </android.support.v7.widget.CardView>


</RelativeLayout>
