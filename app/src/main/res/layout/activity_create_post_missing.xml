<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atfalna.atfalna.Create_Post_Missing_Activity"
    android:padding="3dp"
    android:background="#000">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_select"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/select_image2"
                    android:background="#de96c7e1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="أكتب التاريخ التاريخ اتفقد الحالة فيه"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/color3"
                    >

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="السنة"
                        android:textColorHint="@color/color2"
                        android:textColor="@color/color2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:entries="@array/spinner_month"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:hint="يوم"
                        android:textColorHint="@color/color2"
                        android:textColor="@color/color2"
                        android:layout_marginRight="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right|center_vertical"
                    android:background="@color/color2"
                    android:paddingRight="5dp">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/spinner_city"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="مدينة المفقود"
                        android:textColor="@color/color3"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:background="@color/color3">


                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:layout_marginTop="2dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:checked="true"
                            android:text="ذكر"
                            android:textColor="@color/color2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rdo_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="أنثي"
                            android:textColor="@color/color2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="جنس المفقود  : "
                        android:textColor="@color/color2"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/color2"
                    android:layout_marginTop="2dp"
                    android:paddingRight="5dp"
                    android:gravity="right|center_vertical">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:hint="رقم التليفون"
                        android:textColor="@color/color3"
                        android:textColorHint="@color/color3"
                        android:inputType="phone"
                        android:background="@drawable/style_ed_create_post"
                        android:paddingRight="5dp"
                        android:gravity="right|center_vertical"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>



    </android.support.v7.widget.CardView>

</RelativeLayout>
