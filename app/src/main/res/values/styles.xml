<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- This is the color of the Toolbar -->
        <item name="colorPrimary">@color/colorTeal500</item>
        <!-- This is the color of the Status bar -->
        <item name="colorPrimaryDark">@color/colorGrey500</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- This is the color of the Toolbar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- This is the color of the Status bar -->
        <item name="colorPrimaryDark">@color/colorbluedark</item>
        <item name="colorAccent">@color/color2</item>
    </style>

    <style name="AppTheme_NoActionBar_create_Post" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- This is the color of the Toolbar -->
        <item name="colorPrimary">@color/colorPrimary</item>
