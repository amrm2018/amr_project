<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">


    <TextView
        android:id="@+id/tv_show_f"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp" />


    <TextView
        android:id="@+id/tv_show_m"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_show_f"
        android:layout_marginEnd="111dp"
        android:layout_marginTop="77dp" />


    <TextView
        android:id="@+id/tv_create_f"
        android:layout_width="160dp"
        android:layout_height="155dp"
        android:layout_alignEnd="@+id/tv_show_m"
        android:layout_below="@+id/tv_show_m"
        android:layout_marginTop="148dp" />


    <TextView
        android:id="@+id/tv_create_m"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/tv_show_f"
        android:layout_below="@+id/tv_create_f"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="35dp" />

</RelativeLayout>